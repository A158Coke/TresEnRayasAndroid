<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 标题 -->

    <!-- 开始游戏按钮 -->

    <TextView
        android:id="@+id/tv1"
        android:layout_width="239dp"
        android:layout_height="103dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="156dp"
        android:text="@string/jugador_turn"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StartBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startGame"
        android:text="Game Start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 难度切换按钮 -->
    <Button
        android:id="@+id/lvlBt"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="changeLvl"
        android:text="Facil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 重启比赛按钮 -->
    <Button
        android:id="@+id/reiniciBt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:onClick="restartGame"
        android:text="Reiniciar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="240dp"
        android:background="@color/black"
        android:padding="16dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.67"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rowCount="3">

        <!-- 按钮1 -->
        <ImageButton
            android:id="@+id/b1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />


        <!-- 按钮2 -->
        <ImageButton
            android:id="@+id/b2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <!-- 按钮3 -->
        <ImageButton
            android:id="@+id/b3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <!-- 按钮4 -->
        <ImageButton
            android:id="@+id/b4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <!-- 按钮5 -->
        <ImageButton
            android:id="@+id/b5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <!-- 按钮6 -->
        <ImageButton
            android:id="@+id/b6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <!-- 按钮7 -->
        <ImageButton
            android:id="@+id/b7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <!-- 按钮8 -->
        <ImageButton
            android:id="@+id/b8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            tools:ignore="SpeakableTextPresentCheck" />

        <!-- 按钮9 -->
        <ImageButton
            android:id="@+id/b9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:onClick="onButtonClick"
            android:scaleType="fitCenter"
            android:src="@drawable/white"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/chessBt"
        android:layout_width="104dp"
        android:layout_height="62dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="156dp"
        android:onClick="choosePieza"
        android:text="@string/Chess1"
        app:layout_constraintStart_toEndOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>